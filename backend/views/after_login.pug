doctype html
head(lang='fr')
  meta(charset='utf-8')
  title Codecast - Signed in
body
  script(type='text/javascript', src=rebaseUrl('build/bebras-modules/ext/jschannel/jschannel.js'))
  script.
    var channel = window.Channel.build({window: window.opener, origin: '*', scope: 'login'});
    channel.call({
        method: 'sendLoginFeedback',
        params: {
            user: !{user ? JSON.stringify(user) : "null"},
            token: !{token ? JSON.stringify(token) : "null"},
            error: !{error ? JSON.stringify(error) : "null"}
        },
        success: function () {
            window.close();
        }
    });
