doctype html
head(lang='fr')
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  unless development
    link(rel='stylesheet', href='build/index.css')
  title Codecast
body(id='app')
  div(id='react-container')
    div(style='width: 256px; height: 256px; margin: 0 auto;')
      img(src=rebaseUrl('assets/loading.gif'))
  script(type='text/javascript', src=rebaseUrl('build/index.js'))
  each file in files
    script(type='text/javascript', src=rebaseUrl('build/' + file))
  script(type='text/javascript') Codecast.start(!{JSON.stringify(options)})
